<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.snes9x-next"
		name="Snes9x-Next"
		version="1.52.6"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.snes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.snes9x-next.so"
                   library_linux="game.libretro.snes9x-next.so"
                   library_osx="game.libretro.snes9x-next.dylib"
                   library_windx="game.libretro.snes9x-next.dll"
                   library_wingl="game.libretro.snes9x-next.dll">
		<platforms>SNES</platforms>
		<extensions>smc|fig|sfc|gd3|gd7|dx2|bsx|swc</extensions>
		<allowvfs>true</allowvfs>
		<blockextract>false</blockextract>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Snes9x-Next v1.52.4</summary>
		<description>Snes9x-Next is based on Snes9x, but has been heavily modified/speed-hacked to achieve better speed.

Supported files: .smc, .fig, .sfc, .gd3, .gd7, .dx2, .bsx, .swc

License: Non-commercial

Icon credit: Alucryd (alucryd.deviantart.com)</description>
		<platform>all</platform>
	</extension>
</addon>
